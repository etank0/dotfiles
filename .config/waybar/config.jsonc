// -*- mode: jsonc -*-
{
  "output": ["eDP-1"],
  "layer": "top", // Waybar at top layer
  "position": "bottom", // Waybar position (top|bottom|left|right)
  "margin-left": 0,
  "margin-right": 0,
  "margin-top": 0,
  "margin-bottom": 0,
  "height": 25, // Waybar height (to be removed for auto height)
  // "width": 1280, // Waybar width
  "spacing": 2, // Gaps between modules (4px)
  // Choose the order of the modules
  "modules-left": [
    "clock",
    "hyprland/workspaces"
  ],
  "modules-center": ["hyprland/window"],
  "modules-right": [
    "tray",
    "group/performance",
    // "network",
    // "keyboard-state",
    "backlight",
    "group/audio",
    "power-profiles-daemon",
    "battery",
    "battery#bat2",
    "custom/notification",
    "custom/power"
  ],

  // Groups configuration
  "group/audio": {
    "orientation": "horizontal",
    "modules": ["pulseaudio", "pulseaudio#microphone"],
  },

  "group/performance": {
    "orientation": "horizontal",
    // "modules": ["cpu", "memory", "temperature", "disk"],
    "modules": ["cpu", "memory", "disk"],
  },

  // Modules configuration
  "hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "warp-on-scroll": false,
    // "format": "{name} : {icon}",
    "format": "{name}",
    "format-icons": {
      "1": "ÔÑ† ",
      "2": "Û∞àπ ",
      "3": "ÔÑ° ",
      "4": "ÔÄ≠ ",
      "5": "Ôáø ",
      "6": "Û∞ùö ",
      "urgent": "ÔÅ™ ",
      "focused": "ÔÜí ",
      "default": "ÔÑë ",
    },
  },

  "hyprland/window": {
    "format": "{}",
    "max-length": 50,
    "separate-outputs": true,
  },

  "wlr/taskbar": {
    "format": "{icon} {name} ",
    "icon-size": 15,
    "all-outputs": false,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close",
    "ignore-list": ["wofi", "rofi"],
  },

  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "ÔÄ£",
      "unlocked": "ÔÇú ",
    },
  },

  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "ÔÅÆ ",
      "deactivated": "ÔÅ∞ ",
    },
  },

  "tray": {
    // "icon-size": 21,
    "spacing": 10,
    // "icons": {
    //   "blueman": "bluetooth",
    //   "TelegramDesktop": "$HOME/.local/share/icons/hicolor/16x16/apps/telegram.png"
    // }
  },

  "clock": {
    // "timezone": "America/New_York",
    "tooltip-format": "<tt>{calendar}</tt>",
    "format": "{:%a, %b %d  %H:%M}", // 24H
  },

  "cpu": {
    "format": "Ôíº  {usage}%",
    "tooltip": true,
  },

  "memory": {
    "format": "<span>ÓøÖ </span> {}%",
  },

  "temperature": {
    // "thermal-zone": 2,
    // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
    "critical-threshold": 80,
    // "format-critical": "{temperatureC}¬∞C {icon}",
    "format": "{icon} {temperatureC}¬∞C",
    "format-icons": ["Ôù´", "Ôãâ", "Ôù©"],
  },

  "disk": {
    "interval": 30,
    //"format": "Û∞ãä",
    "path": "/",
    //"format-alt-click": "click",
    "format": "Û∞ãä {percentage_used}%",
    //"tooltip": true,
    "tooltip-format": "{used} used out of {total} on {path} ({percentage_used}%)",
  },

  "backlight": {
    // "device": "acpi_video1",
    "format": "{icon}{percent}%",
    "format-icons": ["Óéç ", "Óèì ", "Óèë ", "Óèè ", "Óèé ", "Óèç ", "Óèä ", "Óèà ", "Óéõ "],
  },

  "battery": {
    "states": {
      // "good": 95,
      "warning": 30,
      "critical": 15,
    },
    "format": "{icon} {capacity}%",
    "format-full": "{icon} {capacity}%",
    "format-charging": "Ôóß {capacity}%",
    "format-plugged": "Ôá¶ {capacity}%",
    "format-alt": "{icon} {time}",
    // "format-good": "", // An empty format will hide the module
    // "format-full": "",
    "format-icons": ["ÔâÑ ", "ÔâÉ ", "ÔâÇ ", "ÔâÅ ", "ÔâÄ "],
  },

  "battery#bat2": {
    "bat": "BAT2",
  },

  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "ÔÉß",
      "performance": "ÔÉß",
      "balanced": "Ôâé ",
      "power-saver": "ÔÅ¨ ",
    },
  },

  "network": {
    "format": "{ifname}",
    "format-wifi": "{icon}",
    "format-ethernet": "Û∞åò ",
    "format-disconnected": "Û∞åô ",
    "tooltip-format": "{ipaddr} ÔÑπ {bandwidthUpBytes} ÔÑ∫ {bandwidthDownBytes}",
    "format-linked": "Û∞àÅ {ifname} (No IP)",
    "tooltip-format-wifi": "{essid} {icon} {signalStrength}%",
    "tooltip-format-ethernet": "{ifname} Û∞åò ",
    "tooltip-format-disconnected": "Û∞åô Disconnected",
    "max-length": 50,
    "format-icons": ["Û∞§Ø ", "Û∞§ü ", "Û∞§¢ ", "Û∞§• ", "Û∞§® "],
  },

  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-bluetooth": "{icon} Û∞Ç∞  {volume}%",
    "format-muted": "Û∞ñÅ ",
    "format-icons": {
      "headphone": "ÔÄ• ",
      "hands-free": "ÔÄ• ",
      "headset": "ÔÄ• ",
      "phone": "ÔÇï ",
      "portable": "ÔÇï ",
      "car": "ÔÜπ ",
      "default": ["ÔÄ¶ ", "ÔÄß ", "Û∞ïæ ", "ÔÄ® "],
      "ignored-sinks": ["Easy Effects Sink"],
    },
    "scroll-step": 5.0,
    "on-click": "pavucontrol -t 3",
    "tooltip-format": "{icon}  {desc} | {volume}%",
    "smooth-scrolling-threshold": 1,
  },

  "pulseaudio#microphone": {
    "format": "{format_source}",
    "format-source": "ÔÑ∞",
    "format-source-muted": "ÔÑ± ",
    "on-click": "pavucontrol -t 4",
    "tooltip-format": "{source_desc} | {source_volume}%",
    "scroll-step": 5,
  },

  "custom/media": {
    "format": "{icon} {0}",
    "return-type": "json",
    "max-length": 40,
    "format-icons": {
      "spotify": "ÔÜº ",
      "default": "üéú ",
    },
    "escape": true,
    "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null", // Script in resources folder
    // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
  },

  // "custom/power": {
  //   "format": " ‚èª ",
  //   "tooltip": false,
  //   "menu": "on-click",
  //   "menu-file": "$HOME/.config/waybar/power_menu.xml",
  //   "menu-actions": {
  //     "shutdown": "shutdown",
  //     "reboot": "reboot",
  //     "suspend": "systemctl suspend",
  //     "hibernate": "systemctl hibernate",
  //   },
  // },

  "custom/power": {
    "format": "ÔÄë ",
    "exec": "echo ; echo Û∞ü° Power",
    "on-click": "~/.config/hypr/scripts/wlogout.sh",
    "interval": 86400, // once every day
    "tooltip": true,
  },

  "custom/notification": {
    "tooltip-format": "Left: Notifications\nRight: Do not disturb",
    "format": "{icon}",
    "format-icons": {
      "notification": "<span rise='8pt'>ÔÇ¢ <span foreground='red'><sup>ÔëÑ</sup></span></span>",
      "none": "ÔÇ¢ ",
      "dnd-notification": "<span rise='8pt'>ÔÇ¢ <span foreground='red'><sup>ÔëÑ</sup></span></span>",
      "dnd-none": "Ôá∑ ",
      "inhibited-notification": "<span rise='8pt'>ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span></span>",
      "inhibited-none": "ÔÇ¢ ",
      "dnd-inhibited-notification": "<span rise='8pt'>Ôá∑ <span foreground='red'><sup>ÔëÑ</sup></span></span>",
      "dnd-inhibited-none": "Ôá∑ ",
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true,
  },
}
