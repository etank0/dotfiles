{
    // Functionality
    "files.autoSave": "onFocusChange",
    "telemetry.telemetryLevel": "off",

    // Looks & File Tree
    "workbench.activityBar.location": "top",
    "workbench.sideBar.location": "right",
    "workbench.tree.indent": 15,
    "workbench.layoutControl.enabled": false,
    "explorer.compactFolders": false,

    // Window Looks
    "window.titleBarStyle": "custom",
    "window.commandCenter": true,
    "window.menuBarVisibility": "toggle",
    // "window.customTitleBarVisibility": "never",
    "window.zoomLevel": 0.4,

    // Editor
    "editor.fontFamily": "'JetBrains Mono', 'Droid Sans Mono', 'monospace', monospace",
    "editor.fontLigatures": false,
    "editor.lineNumbers": "relative",
    "editor.detectIndentation": true,
    "editor.indentSize": "tabSize",
    "editor.fontSize": 14,
    "editor.fontWeight": "400",
    "editor.scrollbar.verticalScrollbarSize": 10,
    "editor.scrollbar.horizontalScrollbarSize": 10,
    "editor.scrollbar.vertical": "auto",
    "editor.cursorBlinking": "phase",
    "editor.inlayHints.padding": true,
    "editor.lineHeight": 1.6,
    "editor.wordWrap": "on",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "trailing",
    "editor.rulers": [100],
    "breadcrumbs.enabled": true,

    // Terminal
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.fontWeight": "400",
    // "terminal.integrated.shellIntegration.enabled": false,
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.enablePersistentSessions": false,

    // Prettier & TabSize
    "editor.tabSize": 4,
    "prettier.tabWidth": 4,
    "prettier.useTabs": false,
    "prettier.printWidth": 100,
    "reactSnippets.settings.prettierEnabled": true,
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    // Python formatting
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "black-formatter.args": ["--line-length", "100"],

    // Haskell formatting
    "[haskell]": {
        "editor.defaultFormatter": "haskell.haskell"
    },
    "haskell.formattingProvider": "fourmolu",

    // Rust formatting
    "rust-analyzer.rustfmt.extraArgs": ["--config", "max_width=100"],

    // C/C++ formatting
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: LLVM, ColumnLimit: 100 }",

    // VSCode-Neovim
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },

    // Material Icon
    "workbench.iconTheme": "material-icon-theme",
    "workbench.productIconTheme": "material-product-icons",
    "material-icon-theme.activeIconPack": "react_redux",
    "workbench.colorTheme": "Material Theme Darker High Contrast",
    "workbench.colorCustomizations": {
        "[Material Theme*]": {
            "tab.border": "#333333",
            "editorGroupHeader.tabsBorder": "#333333",
            "activityBarBadge.background": "#89ddff",
            "activityBar.activeBorder": "#89ddff",
            "list.activeSelectionForeground": "#89ddff",
            "list.inactiveSelectionForeground": "#89ddff",
            "list.highlightForeground": "#89ddff",
            "scrollbarSlider.activeBackground": "#89ddff50",
            "editorSuggestWidget.highlightForeground": "#89ddff",
            "textLink.foreground": "#89ddff",
            "progressBar.background": "#89ddff",
            "pickerGroup.foreground": "#89ddff",
            "tab.activeBorder": "#89ddff",
            "notificationLink.foreground": "#89ddff",
            "editorWidget.resizeBorder": "#89ddff",
            "editorWidget.border": "#89ddff",
            "settings.modifiedItemIndicator": "#89ddff",
            "settings.headerForeground": "#89ddff",
            "panelTitle.activeBorder": "#89ddff",
            "breadcrumb.activeSelectionForeground": "#89ddff",
            "menu.selectionForeground": "#89ddff",
            "menubar.selectionForeground": "#89ddff",
            "editor.findMatchBorder": "#89ddff",
            "selection.background": "#89ddff40",
            "statusBarItem.remoteBackground": "#89ddff"
        },
        "[Gruvbox Dark Hard]": {
            "tab.border": "#333333",
            "editorGroupHeader.tabsBorder": "#333333",
            "activityBarBadge.background": "#458588",
            "activityBar.activeBorder": "#458588",
            "list.activeSelectionForeground": "#458588",
            "list.inactiveSelectionForeground": "#458588",
            "list.highlightForeground": "#458588",
            "scrollbarSlider.activeBackground": "#45858850",
            "editorSuggestWidget.highlightForeground": "#458588",
            "textLink.foreground": "#458588",
            "progressBar.background": "#458588",
            "pickerGroup.foreground": "#458588",
            "tab.activeBorder": "#458588",
            "notificationLink.foreground": "#458588",
            "editorWidget.resizeBorder": "#458588",
            "editorWidget.border": "#458588",
            "settings.modifiedItemIndicator": "#458588",
            "settings.headerForeground": "#458588",
            "panelTitle.activeBorder": "#458588",
            "breadcrumb.activeSelectionForeground": "#458588",
            "menu.selectionForeground": "#458588",
            "menubar.selectionForeground": "#458588",
            "editor.findMatchBorder": "#458588",
            "selection.background": "#45858840",
            "statusBarItem.remoteBackground": "#458588",

            // More contrast for sidebar and titlebar
            "titleBar.activeBackground": "#1b1b1b",
            "titleBar.inactiveBackground": "#1d2021"
        }
    },

    // Git and Gitlens
    "diffEditor.ignoreTrimWhitespace": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.telemetry.enabled": false,

    // find-it-faster
    // "find-it-faster.general.useTerminalInEditor": true,
    // "find-it-faster.general.killTerminalAfterUse": true,
    "find-it-faster.general.batTheme": "material-theme-darker",

    // Errorlens
    "errorLens.enabled": false,

    // Centered Scrolling
    "multiCommand.commands": [
        {
            "command": "multiCommand.pageUp",
            "sequence": [
                {
                    "command": "editorScroll",
                    "args": { "to": "up", "by": "wrappedLine", "value": 32 }
                },
                { "command": "cursorMove", "args": { "to": "viewPortCenter" } }
            ]
        },

        {
            "command": "multiCommand.pageDown",
            "sequence": [
                {
                    "command": "editorScroll",
                    "args": { "to": "down", "by": "wrappedLine", "value": 32 }
                },
                { "command": "cursorMove", "args": { "to": "viewPortCenter" } }
            ]
        }
    ],
}
