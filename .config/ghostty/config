# fonts
font-style = "JetBrains Mono Light"
font-style-bold = "JetBrains Mono Medium"
font-style-italic = "JetBrains Mono Light Italic"
font-style-bold-italic = "JetBrains Mono Italic"
# disable ligatures
font-feature = -calt
font-size = 11.3

adjust-cell-height = 20%
adjust-cursor-height = 20%
adjust-cursor-thickness = 40%

# colorscheme/theme
theme = "MaterialDarker"

# window
window-decoration = auto
window-height = 33
window-width = 126
background-opacity = 1
window-inherit-working-directory = false

# tabs
gtk-wide-tabs = false

# ---- Keybinds ----

# window
keybind = ctrl+f11=toggle_fullscreen

# panes
keybind = ctrl+shift+p=new_split:down
keybind = ctrl+alt+h=goto_split:left
keybind = ctrl+alt+l=goto_split:right
keybind = ctrl+alt+j=goto_split:down
keybind = ctrl+alt+k=goto_split:up

# tabs keybinds
keybind = ctrl+shift+h=previous_tab
keybind = ctrl+shift+l=next_tab
keybind = ctrl+shift+space=toggle_tab_overview
keybind = ctrl+shift+f=write_scrollback_file:open

